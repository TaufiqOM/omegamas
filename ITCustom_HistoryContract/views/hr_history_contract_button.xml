<odoo>
  <data>
    <record id="view_contract_form_inherit_update_history" model="ir.ui.view">
      <field name="name">hr.contract.form.inherit.update.history</field>
      <field name="model">hr.contract</field>
      <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
      <field name="arch" type="xml">
        
        <!-- Tambahkan tombol ke dalam header form -->
        <xpath expr="//header" position="inside">
          <button name="action_update_history"
                  type="object"
                  string="Update History"
                  class="btn-primary"
                  icon="fa-refresh"/>
        </xpath>

      </field>
    </record>
  </data>
</odoo>
