<odoo>
    <record id="view_contract_history_confirmation_wizard_form" model="ir.ui.view">
        <field name="name">contract.history.confirmation.wizard.form</field>
        <field name="model">contract.history.confirmation.wizard</field>
        <field name="arch" type="xml">
            <form string="Konfirmasi Update Riwayat Kontrak">
                <sheet>
                    <div class="oe_title">
                        <h1>Konfirmasi Riwayat Kontrak</h1>
                    </div>
                    <div class="alert alert-warning" role="alert">
                        <i class="fa fa-exclamation-triangle"/>
                        <strong> Perhatian!</strong> Pastikan semua data kontrak sudah benar sebelum melanjutkan.
                    </div>
                    <footer>
                        <div class="oe_right">
                            <button name="action_cancel" string="Batal" type="object" class="btn-secondary me-2"/>
                            <button name="action_confirm" string="Simpan" type="object" class="btn-primary"/>
                        </div>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>